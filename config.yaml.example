# Claudette Configuration
# Copy this file to config.yaml and customize for your setup

whisper:
  # Mode: "local" (faster-whisper) or "remote" (API server)
  mode: "local"

  # Local Whisper settings (when mode: "local")
  # Models: tiny, base, small, medium, large-v2, large-v3
  # Smaller = faster, larger = more accurate
  model: "base"

  # Device: "auto", "cuda", or "cpu"
  # auto will use CUDA if available
  device: "auto"

  # Compute type: float16, int8_float16, int8 (for faster inference)
  compute_type: "float16"

  # Remote Whisper settings (when mode: "remote")
  # URL of your Whisper ASR server
  # Popular options:
  #   - faster-whisper-server: https://github.com/fedirz/faster-whisper-server
  #   - whisper.cpp server: https://github.com/ggerganov/whisper.cpp
  url: "http://localhost:9300/asr"

  # Language for transcription
  language: "en"

audio:
  # Audio capture settings (optimized for Whisper)
  sample_rate: 16000
  channels: 1

# Wake word to activate Claudette
# She responds to many variations automatically
wake_word: "claudette"

vad:
  # Voice Activity Detection settings
  threshold: 0.5           # Speech probability threshold (0.0-1.0)
  min_speech_ms: 250       # Minimum speech duration to trigger (ms)
  silence_duration: 1.5    # Seconds of silence to end recording
  device: "auto"           # Device: "auto", "cuda", or "cpu"

tts:
  # Text-to-Speech settings using Edge TTS
  # British English female voices:
  #   - en-GB-SoniaNeural (default) - Professional, clear
  #   - en-GB-LibbyNeural - Warm, friendly
  #   - en-GB-MaisieNeural - Young, energetic
  voice: "en-GB-SoniaNeural"
  rate: "+0%"              # Speech rate: -50% to +100%
  pitch: "+0Hz"            # Pitch adjustment: -50Hz to +50Hz

memory:
  # Conversation memory settings
  enabled: true                    # Enable conversation memory
  max_exchanges: 20                # Maximum exchanges to remember
  # file: "~/.claudette_memory.json"  # Custom memory file location

skills:
  # Custom skills/plugins directory
  # directory: "./skills"          # Path to custom skills
